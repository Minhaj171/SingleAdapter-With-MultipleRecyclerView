<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">

    <data>
        <variable
            name="homeBinding"
            type="com.example.myapplication.model.BaseModel" />
    </data>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/teal_700">

            <TextView
                android:id="@+id/text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="Multiple adapter"
                android:textSize="22sp"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_sub_main"
            android:layout_below="@+id/cardview_main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/teal_200">

            <TextView
                android:id="@+id/text_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="Single item"
                android:textSize="22sp"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_test_binding"
            android:layout_below="@+id/cardview_sub_main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/green">

            <TextView
                android:id="@+id/text_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="DataBiding"
                android:textSize="22sp"
                />


        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</layout>